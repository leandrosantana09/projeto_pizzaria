// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id String @id @default(uuid())
  name String
  email String
  password String
  creat_at DateTime? @default(now())
  upgrade_at DateTime? @default(now())

  @@map("users")
}


model Category {
  id String @id @default(uuid())
  name String
  creat_at DateTime? @default(now())
  upgrade_at DateTime? @default(now())

  @@map("categories")

  product Product[]
}

model Product {
  id String @id @default(uuid())
  name String
  price String
  description String
  banner String
  creat_at DateTime? @default(now())
  upgrade_at DateTime? @default(now())
  
  @@map("products")

  category Category @relation(fields: [category_id], references: [id])
  category_id String

  itens Item[]


}




model Item {
  id String @id @default(uuid())
  amount Int

  creat_at DateTime? @default(now())
  upgrade_at DateTime? @default(now())

  @@map("itens")

  order Order @relation(fields: [order_id], references: [id])
  product Product @relation(fields: [product_id], references: [id])

  order_id String
  product_id String


}


model Order {
  id String @id @default(uuid())
  table Int
  status Boolean
  draft Boolean
  name String?

  @@map("orders")

  itens Item[]


}






